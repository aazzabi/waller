{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <style>

        #profile-image1 {
            cursor: pointer;
            width: 100px;
            height: 100px;
            border: 2px solid #03b1ce;
        }

        element.style {
            margin-top: 150px;
        }

        ul {
            list-style: none;
            margin-left: 0;
            padding-left: 0;
        }

        li {
            margin-bottom: 15px; /* Ã  adapter */
        }

        th {
            text-align: center;
        }

        div .row {
            margin-left: 10px;
            margin-top: 10px;
        }

        .modal-content {
            position: relative;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });

            $('.toggle-vis').on('change', function (e) {
                e.preventDefault();
                // Get the column API object
                var column = table.column($(this).attr('data-column'));
                // Toggle the visibility
                column.visible(!column.visible());
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <h1>Candidatures list</h1>

            <div class="col-md-6 text-left">

                <a href="{{ path('candidature_new') }}" class="btn btn-success">
                    <i class="icon-plus"> Ajouter une candidature </i></a>

                <br>
            </div>
            <div class="clearfix"></div>
            <br/>
               <table  id="example" style="" class="table table-striped table-responsive">
                <thead>
                <th>Photo</th>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th><i class="fa fa-envelope-o" aria-hidden="true"></i> E-mail</th>
                <th>Poste</th>
                <th>Etape courrante</th>
                <th>Actions</th>

                </tr>
                </thead>
                <tbody>
                {% for candidature in candidatures %}
                    <tr>
                        <td><a href="{{ path('candidature_show', { 'id': candidature.id }) }}">
                                <div id="profile-image1"class="img-circle img-responsive">
                                    {% if candidature.profile.photo != '' %}
                                        <img alt="User Pic"
                                             src="{{ asset('uploads/photo/' ~ candidature.profile.photo) }}"
                                             class="img-circle img-responsive">
                                    {% else %}
                                        <img alt="User Pic" src="{{ asset('assets/image/profile.png') }}"
                                             id="profile-image1" class="img-circle img-responsive">
                                    {% endif %}

                                </div>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('candidature_show', { 'id': candidature.profile.id }) }}">{{ candidature.id }}</a>
                        </td>
                        <td>{{ candidature.profile.nom }}</td>
                        <td>{{ candidature.profile.prenom }}</td>
                        <td>{{ candidature.profile.email }}</td>
                        <td>{{ candidature.poste }}</td>

                        <td>{{ candidature.currentEtape }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('candidature_edit', { 'id': candidature.id }) }}">
                                        <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
                                        edit</a>
                                </li>

                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
