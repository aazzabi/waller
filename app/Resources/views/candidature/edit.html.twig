{% extends 'base.html.twig' %}
{% block head %}
    <title> Modifi candidature de{{ candidature.profile.nom }}</title>
{% endblock %}
{% block stylesheets %}

{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {% form_theme edit_form 'bootstrap_3_layout.html.twig' %}

    <div class="row">
        <div class="col-md-6">
            <h1>Candidature edit</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <a href="{{ path('candidature_show', { 'id': candidature.id }) }}">
                {% if candidature.profile.photo != '' %}
                    <img alt="User Pic"
                         src="{{ asset('uploads/photo/' ~ candidature.profile.photo) }}"
                         class="img-circle img-responsive">
                {% else %}
                    <img alt="User Pic" src="{{ asset('assets/image/profile.png') }}"
                         id="profile-image1" class="img-circle img-responsive">
                {% endif %}
            </a>
        </div>
        <div class="col-md-11">
            <div class="row">
                <div class="col-md-12">
                    <h3><b>{{ candidature.poste }}</b></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>{{ candidature.profile.prenom }} {{ candidature.profile.nom }}</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!--FORMULAIRE DU PROFILE-->
        <div class="col-md-6">
            <div class="form-group row">
                {{ form_start(form) }}
                {% include 'profile/forms/form.html.twig' %}
                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Edit</button>
                {{ form_end(form) }}
                <br>
            </div>
        </div>

        <!--FORMULAIRE DU CANDIDATURE-->
        <div class="col-md-6">
            {{ form_start(edit_form) }}
            {{ form_row(edit_form.currentEtape) }}
            <br>
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Edit</button>
            <a href="{{ path('candidature_index') }}" class="btn btn-warning">
                <i class="fa fa-undo " aria-hidden="true"></i>
                Retour</a>
            {{ form_end(edit_form) }}
        </div>
    </div>

    <!--contenu du Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous vraiement supprimer ce profile ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal"> Annuler
                    </button>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
    <!--fin du modal-->

{% endblock %}
