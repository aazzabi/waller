{{ form_row(form.currentEtape) }}
{{ form_row(form.group) }}
{% if not profileSelected  %}

<div class="row">
    <div class="col-md-1" style="font-size: 11px ! important;
        text-transform: uppercase;font-weight:600;" >
    {{ form_label(form.profile) }}
</div>

    <div style="padding-left: 70px;" class="col-md-11 ">&nbsp;&nbsp;
        <button type="button" class="btn btn-sm btn-secondary " data-toggle="modal" data-target="#myModal">Choisir un profile</button>
    </div>
</div>
{% endif %}
{{ form_widget(form.profile) }}

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" style="width:750px;">
             <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Liste des profiles</h4>
            </div>
            <div class="modal-body">
                <table id="profiles-2" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                    <tr>
                        <th>{{ 'entity.profile.photo' | trans }}</th>
                        <th>{{ 'entity.profile.nom' | trans }}</th>
                        <th>{{ 'entity.profile.experience' | trans }}</th>
                        <th>{{ 'entity.profile.niveau' | trans }}</th>
                        <th>{{ 'entity.profile.competences' | trans }}</th>
                        <th>Choix</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for profile in profiles %}
                        <tr class="trChoisie" id="{{ profile.id }}">
                            <td>
                                <div id="profile-image1" class="img-responsive text-center">
                                    {% if profile.photo != '' %}
                                        <img alt="User Pic" style="width: 30px;height: 30px;"
                                             src="{{ asset('uploads/photo/' ~ profile.photo) }}"
                                             id="profile-image1" class="img-circle img-responsive"/>
                                    {% else %}
                                        <img alt="User Pic" style="width: 30px;height: 30px;"
                                             src="{{ asset('assets/img/profile.png') }}"
                                             id="profile-image1" class="img-circle img-responsive"/>
                                    {% endif %}

                                </div>
                            </td>
                            <td>{{ profile.nom }} {{ profile.prenom }}</td>
                            <td>{{ profile.experience }} ans</td>
                            <td>{{ profile.niveau }}</td>
                            <td>{{ profile.competencesTags }}</td>
                            <td>
                                <button type="button" class="buttonn" id="validate_{{ profile.id }}">
                                    <i class="fa fa-check fa-success" aria-hidden="true"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" id="exit" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

