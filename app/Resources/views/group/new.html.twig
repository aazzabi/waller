{% extends 'base.html.twig' %}
{% block title %}
    Ajout d'une nouvelle société
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap-tagsinput.css') }}">
    <style>
        .card-block {
            padding: 10px;
        }

        .card-title {
            margin-bottom: 0px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/bootstrap-tagsinput.js') }} "></script>
    <script src="{{ asset('assets/js/typeahead.js') }} "></script>
    <script src="{{ asset('assets/js/competences.js') }} "></script>
{% endblock %}

{% block body %}
    <br>
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-8">
                <h1><b>Ajout d'une nouvelle société</b></h1>
            </div>
            <div class="col-md-4 text-right">
                <br>
                <button type="submit" class="btn btn-success" value="Create">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Confirmer
                </button>
                <a href="{{ path('group_index') }}" class="btn btn-secondary">
                    <i class="fa fa-undo" aria-hidden="true"></i>
                    Retour à la liste</a>

                <br>
            </div>
        </div>
    </div>
    <hr>
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}
