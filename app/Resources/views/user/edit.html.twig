{% extends 'base.html.twig' %}

{% block title %}
    Modification d'utilisateur
{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <h1><b>Modification d'utilisateur </b></h1>
        </div>
        <div class="col-md-6 text-right">
            <br>
            <button type="submit" class="btn btn-success" value="Create">
                <i class="fa fa-check" aria-hidden="true"></i>Confirmer
            </button>
            <a href="{{ path('users_index') }}" class="btn btn-secondary">
                <i class="fa fa-undo" aria-hidden="true"></i>Retour Ã  la liste</a>
            <button type="button" class="btn btn-danger btn_lg" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-times" aria-hidden="true"></i>
                {{ 'entity.common.supprimer' | trans }}
            </button>
            <br>
        </div>
    </div>

    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    {{ form_start(delete_form) }}

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> {{ 'entity.common.supprimer' | trans }}
                    </h5>
                </div>
                <div class="modal-body">
                    Voulez-vous vraiement supprimer ce profil ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal"> Annuler
                    </button>

                    <input class="btn btn-danger btn_lg" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
