{% extends 'base.html.twig' %}

{% block title %}
    Liste des utilisateurs
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var table = $('#profiles').DataTable({
                "paging": true,
                "scrollX": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });

            table.columns().every(function (index) {
                var visible = this.visible();
                $('.toggle-vis').eq(index).prop('checked', visible);
            });

            $('.toggle-vis').on('change', function (e) {
                e.preventDefault();
                // Get the column API object
                var column = table.column($(this).attr('data-column'));
                // Toggle the visibility
                column.visible(!column.visible());
            });

        });

    </script>

{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Liste des utilisateurs</b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    {% if is_granted('ROLE_CONSULT')== false %}    
                        <a href="{{ path('users_new') }}" class="btn btn-success">
                            <i class="icon-plus">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                &nbsp;Ajouter un utilisateur
                            </i>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <table id="users" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>
                            {% for role in user.roles %}
                                {{ role }}
                            {% endfor %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                <a class="btn btn-secondary" href="{{ path('users_show', { 'id': user.id }) }}"
                                   data-toggle="tooltip" title="Afficher l'utilisateur">
                                    <i class="fa fa-eye"></i>
                                </a>
                                {% if is_granted('ROLE_CONSULT')== false %}    
                                    <a class="btn btn-secondary" href="{{ path('users_edit', { 'id': user.id }) }}"
                                       data-toggle="tooltip" title="Editer l'utilisateur">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
