{% extends 'base.html.twig' %}
{% block javascripts %}
    <script language="javascript">
        $(function (){

            function copyForms() {
                var posteForm = $('form[name=appbundle_poste] :input');
                posteForm.not(':submit')
                    .clone().hide()
                    .appendTo('form[name=appbundle_lien]');
            }

            $('#appbundle_submit').on('click', function (e) {
//                e.preventDefault();
                var lienForm = $('form[name=appbundle_lien]');
                copyForms();
                lienForm.submit();
            });

            $('form[name=appbundle_poste]').on('submit', function (e) {
                e.preventDefault();
                copyForms();
                $(this).unbind().submit();
            });

            $('form[name=appbundle_lien]').on('submit', function (e) {
                e.preventDefault();
                var lienForm = $('form[name=appbundle_lien]');
                copyForms();
                lienForm.submit();
            });
        });
    </script>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_start(formLien) }}
    <div class="row">
        <div class="col-md-5">
            <h1>Poste creation</h1>
        </div>
        <div class="col-md-7 text-right">
            <input id="appbundle_submit" onclick="copyForms();" class="btn btn-success" type="submit" value="Create"/>
            <a class="btn btn-secondary" href="{{ path('poste_index') }}"><i class="fa fa-undo " aria-hidden="true"></i>
                Back to the list</a>
        </div>
    </div>
    <hr>
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {% form_theme formLien 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_widget(form) }}
    {{ form_widget(formLien) }}
    {{ form_end(form) }}
    {{ form_end(formLien) }}


    <ul>
        <li>
        </li>
    </ul>
{% endblock %}
