{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile edit</h1>
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_start(form) }}
    {% include 'profile/forms/form.html.twig' %}
        <div class="col-md-6">
        <input type="submit" class="btn btn-secondary" value="Edit"/>
        <a href="{{ path('profile_index') }}" class="btn btn-secondary">Back to the list</a>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger btn_lg" data-toggle="modal" data-target="#myModal">
            Supprimer
        </button>
    </div>
    {{ form_end(form) }}
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous vraiement supprimer ce profile ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal"> Annuler
                    </button>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger btn_lg" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
