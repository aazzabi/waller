{% extends 'base.html.twig' %}

{% block title %}
    Modif. du profile de {{ profile.nom }}
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap-tagsinput.css') }}">
    <style>

    </style>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/bootstrap-tagsinput.js') }} "></script>
    <script src="{{ asset('assets/js/typeahead.js') }} "></script>
    <script src="{{ asset('assets/js/competences.js') }} "></script>
{% endblock %}


{% block body %}
    <br>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-sm-2">
                    {% if profile.photo != '' %}
                        <img alt="User Pic"
                             src="{{ asset('uploads/photo/' ~ profile.photo) }}"
                             class="img-circle img-responsive">
                    {% else %}
                        <img alt="User Pic" src="{{ asset('assets/image/profile.png') }}"
                             id="profile-image1" class="img-circle img-responsive">
                    {% endif %} &nbsp;
                </div>
                <div class="col-sm-10">
                    <h1> Modification profile</h1>
                </div>
            </div>
        </div>
        <div class="col-md-6 text-right">
            <br>
            <button href="#success" data-toggle="modal" type="submit" class="btn btn-secondary">
                <i class="fa fa-check"></i> Confirmer
            </button>
            <a href="{{ path('profile_index') }}" class="btn btn-secondary">
                <i class="fa fa-undo" aria-hidden="true"></i>
                Retour à la liste</a>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-danger btn_lg" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-times" aria-hidden="true"></i>
                {{ 'entity.common.supprimer' | trans }}
            </button>

        </div>
    </div><br>
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {% include 'profile/forms/form.html.twig' %}
    <br>
    {{ form_end(form) }}

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> {{ 'entity.common.supprimer' | trans }}
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous vraiement supprimer ce profile ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal"> Annuler
                    </button>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger btn_lg" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>

    {#Modal confirmer#}
    <div class="modal fade" id="success" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            {#<div class="modal-content">#}
            <div class="alert alert-success" role="alert">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <strong>Confirmer !</strong> Modification réalisée avec succés.
                {#</div>#}
            </div>
        </div>
    </div>
{% endblock %}

