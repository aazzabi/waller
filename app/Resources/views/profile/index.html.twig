{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <style>

        #profile-image1 {
            cursor: pointer;
            width: 100px;
            height: 100px;
            border: 2px solid #03b1ce;
        }

        element.style {
            margin-top: 150px;
        }

        ul {
            list-style: none;
            margin-left: 0;
            padding-left: 0;
        }

        li {
            margin-bottom: 15px; /* à adapter */
        }

        th {
            text-align: center;
        }

        div .row {
            margin-left: 10px;
            margin-top: 10px;
        }

        .modal-content {
            position: relative;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });

            $('.toggle-vis').on('change', function (e) {
                e.preventDefault();
                // Get the column API object
                var column = table.column($(this).attr('data-column'));
                // Toggle the visibility
                column.visible(!column.visible());
            });
        });
    </script>

{% endblock %}

{% block body %}
    <div class="row">
    <div class="col-md-12">
        <h1>Profiles list</h1>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            Appliquer un filtre
        </button>


        <br>

        <br>
        <div class="modal fade " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="margin-top: 150px;">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Columns</h4>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="0">
                                        Photos
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="1">
                                        Id
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="2">
                                        Nom
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="3">
                                        Prenom
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="4">
                                        Télephone
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="5">
                                        E-mail
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="6">
                                        Curriculum vitae
                                    </label>
                                </div>

                            </div>


                            <div class="col-md-6">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="7">
                                        Experience
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="8">
                                        Niveau
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="9">
                                        Skype
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="10">
                                        Reseaux sociaux
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="11">
                                        SIVP
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="toggle-vis form-check-input" data-column="12">
                                        Prestation salariale
                                    </label>
                                </div>


                            </div>
                        </div>


                        <div class="modal-footer">
                            <button type="button" class="btn btn-default btn-primary" data-dismiss="modal">Save
                                changes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <br>


        </div>
        <table id="example" style="" class="table table-striped table-responsive">
            <thead>
            <th>Photo</th>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Telephone</th>
            <th><i class="fa fa-envelope-o" aria-hidden="true"></i> E-mail
            </th>
            <th>Cv</th>
            <th>Experience</th>
            <th>Niveau</th>
            <th>Skype</th>

            <th>Reseaux sociaux</th>
            <th>Sivp</th>
            <th>Prestation Salariale</th>

            <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for profile in profiles %}
                <tr>
                    <td><a href="{{ path('profile_show', { 'id': profile.id }) }}">
                            <div id="profile-image1" class="img-circle img-responsive">
                                {% if profile.photo != '' %}
                                    <img alt="User Pic" src="{{ asset('uploads/photo/' ~ profile.photo) }}"
                                         id="profile-image1" class="img-circle img-responsive">
                                {% else %}
                                    <img alt="User Pic" src="{{ asset('assets/image/profile.png') }}"
                                         id="profile-image1" class="img-circle img-responsive">
                                {% endif %}

                            </div>
                        </a>
                    </td>
                    <td><a href="{{ path('profile_show', { 'id': profile.id }) }}">{{ profile.id }}</a></td>
                    <td>{{ profile.nom }}</td>
                    <td>{{ profile.prenom }}</td>
                    <td>{{ profile.telephone }}</td>
                    <td>{{ profile.email }}</td>
                    <td>
                        {% if profile.cv != null %}
                            <a href="{{ asset('uploads/cv/' ~ profile.cv) }}" class="btn btn-secondary btn-sm">
                                <i class="fa fa-file-word-o " aria-hidden="true"></i>
                                CV
                            </a>
                        {% endif %}
                    </td>
                    <td>{{ profile.experience }} ans</td>
                    <td>{{ profile.niveau }}</td>
                    <td>{{ profile.skype }}</td>

                    <td>
                        <ul>
                            {% if profile.linkedin %}
                                <li>
                                    <a href="{{ profile.linkedin }}">
                                        <i class="fa fa-linkedin fa-2x" style="color:#4875B4;" aria-hidden="true"></i>
                                </li>
                            {% endif %}

                            {% if profile.facebook %}
                                <li>
                                    <a href="{{ profile.facebook }}">
                                        <i class="fa fa-facebook-square fa-2x"
                                           style="color:#3b5998;"></i>
                                    </a>
                                </li>
                            {% endif %}
                            {% if profile.github %}
                                <li>
                                    <a href="{{ profile.github }}">
                                        <i class="fa fa-github fa-2x" aria-hidden="true"></i>
                                </li>
                            {% endif %}
                        </ul>

                    </td>
                    <td>{% if profile.sivp %}
                            <i class="fa fa-check text-success fa-2x" aria-hidden="true"></i>
                        {% else %}
                            <i class="fa fa-times text-danger fa-2x" aria-hidden="true"></i>
                        {% endif %}
                    </td>
                    <td>{{ profile.prestationsalariale }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('profile_show', { 'id': profile.id }) }}"><i class="fa fa-eye fa-2x"
                                                                                              aria-hidden="true"></i>
                                    show</a>
                            </li>
                            <li>
                                <a href="{{ path('profile_edit', { 'id': profile.id }) }}">
                                    <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
                                    edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('profile_new') }}"><i class="fa fa-plus fa-3x" aria-hidden="true"></i></a>
            </li>
        </ul>
    </div>

{% endblock %}